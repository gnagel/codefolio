  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/msmfsd/codefolio.git"
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --colors --progress",
    "lint": "eslint --ext .js --ext .jsx ./test ./src; exit 0",
    "start": "node server --colors",
    "test": "npm run lint && npm run mocha && npm run karma",
    "test:watch": "npm run mocha:watch & npm run karma:watch",
    "mocha": "mocha --compilers js:babel-core/register src/reducers --recursive",
    "mocha:watch": "npm run mocha -- --watch",
    "karma": "NODE_ENV=production karma start karma.config.js",
    "karma:watch": "npm run karma -- --watch"
  },
